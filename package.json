{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "ExpressJS + TypeScript template",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettify": "prettier --write \"{src,frontend/src}/**/*.{js,ts,tsx,json,css,scss}\"",
    "build": "tsc",
    "start": "node .",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*' -e 'ts,js,json,xml,yaml' --exec 'ts-node' ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KiraLT/Express-TypeScript.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KiraLT/Express-TypeScript/issues"
  },
  "homepage": "https://github.com/KiraLT/Express-TypeScript#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "prettier": "^2.2.1",
    "swagger-ui-express": "^4.1.5",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.31",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": "12.x"
  }
}
